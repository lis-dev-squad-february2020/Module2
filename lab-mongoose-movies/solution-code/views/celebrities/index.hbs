<h1>{{ title }}</h1>
<ul>
  {{#each allCelebrities}}
  <li>
    <a href="/celebrities/{{ this._id }}">
      {{ this.name }}
    </a>
    - {{ this.occupation }}
    <a href="/celebrities/{{ this._id }}/edit">
      Edit
    </a>
    <form action="/celebrities/{{ this._id }}/delete" method="POST">
      <button> Delete </button>
    </form>
  </li>
  {{/each}}
</ul>

<a href="/celebrities/new">
  Click here to add a new celebrity
</a>